<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>
        const room_id = "<%= roomId %>"
        const name = "<%= user.name %>"
    </script>
    <script defer src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/script.js" defer></script>
    <title>Clone</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="test.css">
</head>
<body>
    <div class="outer">
        <div class="showChatLeft" id="left">
            <!-- test -->
            <div class="header1">
                <div class="text">
                    <h6>Do you want to download the recording?</h6>
                    <a id="download"><button>Download</button></a>
                </div>
                <div class="icons"><i class="bi bi-x"></i></div>
            </div>
            <div class="header2">
                <h6>Stop Recording?</h6>
                <button id="stop">Stop</button>
            </div>
            <div class="videos">
                <div id="video-grid"></div>
            </div>
            <div class="mainControls">
                <div class="controlBlock">
                    <div class="controlButton dropDown" onclick="showInfo()">
                        <i class="bi bi-info-circle"></i>
                        <span>Meeting Info</span>
                    </div>
                    <div class="dropdown-content" id="dropdown-content">
                        <h6>Copy the below meeting Id to share with others</h6>
                        <input value="<%= roomId%>" id="meetingId"/>
                        <i onclick="copy()" class="fa fa-files-o"></i>
                        <h6 id="linkInfo">Or copy the below meeting link to share</h6>
                        <button onclick="share()">Copy Meeting Link</button>
                    </div>
                </div>
                <div class="controlBlock">
                    <div class="controlButton" id="muteUnmute" onclick="startGlow()">
                        <i class="bi bi-mic-fill"></i>
                        <span>Mute</span>
                    </div>
                    <div class="controlButton" id="playStop">
                        <i class="bi bi-camera-video-fill"></i>
                        <span>Video Off</span>
                    </div>
                    <div class="controlButton" id="screenShare" onclick="screenshare()">
                        <i class="bi bi-box-arrow-up"></i>
                        <span>Share Screen</span>
                    </div>
                    <div class="controlButton" onclick="showList()">
                        <i class="bi bi-people-fill"></i>
                        <span>Participants</span>
                    </div>
                    <div class="controlButton" id="chatButton" onclick="showChat()">
                        <i class="bi bi-chat-right-text-fill"></i>
                        <span>Chat</span>
                    </div>
                    <div class="controlButton" id="raiseHandButton">
                        <i class="bi bi-hand-index-fill"></i>
                        <span>Raise Up</span>
                    </div>
                    <div class="controlButton" id="record" onclick="recordScreen()">
                        <i class="bi bi-record-circle-fill"></i>
                        <span>Record</span>
                    </div>
                </div>
                    <div class="leaveMeeting" id="disconnect">
                      <span class="">Leave Meeting</span>
                    </div>
            </div>
        </div>
        <div class="participantsList" id="participantsList">
            <div class="listHead">
              <h6>Participants</h6>
            </div>
            <div class="names" id="names">

            </div>
        </div>
        <div class="showChatRight" id="right">
            <div class="chatHeader">
                <h6>LIVE CHAT</h6>
            </div>
            <div class="messageContainer" id="messageContainer">
                <ul class="messages" id="allMessages"></ul>
            </div>
            <div class="sendContainer">
                <input type="text" id="chat" placeholder="Type message here"/>
                <button class="sendMsg" id="sendMsg" type="submit"><i class="fa fa-paper-plane"></i></button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>